#parse("/velocity/main.vm")
#@mainMain()
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <form class="form-horizontal" id="loginForm" method="post">
                <span class="heading">Submit</span>
                <div class="form-group">
                    <input class="form-control" pattern="[а-яА-Яa-zA-Z0-9_-]{4,12}" type="text" name="username" placeholder="Username" value="" required>
                </div>
                <div class="form-group help">
                    <input class="form-control" pattern="[а-яА-Яa-zA-Z0-9_-]{4,12}" type="password" name="password" placeholder="Password" value="" required>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-outline-success btn-sm">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
#end